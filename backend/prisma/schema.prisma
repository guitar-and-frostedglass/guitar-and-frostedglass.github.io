// Prisma Schema for Guitar & Frosted Glass

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum NoteStatus {
  DRAFT
  PUBLISHED
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String   @map("password_hash")
  displayName  String   @unique @map("display_name")
  avatar       String?  @map("avatar") @db.Text
  role         Role     @default(USER)
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  notes       Note[]
  replies     Reply[]
  inviteCodes InviteCode[]

  @@map("users")
}

model InviteCode {
  id        String   @id @default(uuid())
  code      String   @unique
  expiresAt DateTime @map("expires_at")
  used      Boolean  @default(false)
  usedBy    String?  @map("used_by")
  createdAt DateTime @default(now()) @map("created_at")

  creatorId String @map("creator_id")
  creator   User   @relation(fields: [creatorId], references: [id], onDelete: Cascade)

  @@map("invite_codes")
}

model Note {
  id        String     @id @default(uuid())
  title     String     @default("")
  content   String     @default("")
  color     String     @default("yellow")
  status    NoteStatus @default(PUBLISHED)
  positionX      Int      @default(50) @map("position_x")
  positionY      Int      @default(50) @map("position_y")
  lastActivityAt DateTime @default(now()) @map("last_activity_at")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  userId  String  @map("user_id")
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  replies Reply[]
  editHistory NoteEditHistory[]

  @@map("notes")
}

model Reply {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  noteId String @map("note_id")
  note   Note   @relation(fields: [noteId], references: [id], onDelete: Cascade)

  userId String @map("user_id")
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  replyToId String? @map("reply_to_id")
  replyTo   Reply?  @relation("ReplyToReply", fields: [replyToId], references: [id], onDelete: SetNull)
  quotedBy  Reply[] @relation("ReplyToReply")

  editHistory ReplyEditHistory[]

  @@map("replies")
}

model NoteEditHistory {
  id            String   @id @default(uuid())
  noteId        String   @map("note_id")
  note          Note     @relation(fields: [noteId], references: [id], onDelete: Cascade)
  title         String   @default("")
  content       String   @default("")
  editedById    String   @map("edited_by_id")
  editedByName  String   @map("edited_by_name")
  editedAt      DateTime @default(now()) @map("edited_at")

  @@map("note_edit_history")
}

model ReplyEditHistory {
  id            String   @id @default(uuid())
  replyId       String   @map("reply_id")
  reply         Reply    @relation(fields: [replyId], references: [id], onDelete: Cascade)
  content       String
  editedById    String   @map("edited_by_id")
  editedByName  String   @map("edited_by_name")
  editedAt      DateTime @default(now()) @map("edited_at")

  @@map("reply_edit_history")
}

model DeletedReply {
  id              String   @id @default(uuid())
  originalReplyId String   @map("original_reply_id")
  content         String
  noteId          String   @map("note_id")
  noteTitle       String   @default("") @map("note_title")
  replyUserId     String   @map("reply_user_id")
  replyUserName   String   @map("reply_user_name")
  deletedById     String   @map("deleted_by_id")
  deletedByName   String   @map("deleted_by_name")
  replyCreatedAt  DateTime @map("reply_created_at")
  deletedAt       DateTime @default(now()) @map("deleted_at")

  @@map("deleted_replies")
}

model DeletedNote {
  id             String   @id @default(uuid())
  originalNoteId String   @map("original_note_id")
  title          String   @default("")
  content        String   @default("")
  color          String   @default("yellow")
  noteUserId     String   @map("note_user_id")
  noteUserName   String   @map("note_user_name")
  replies        Json     @default("[]")
  deletedById    String   @map("deleted_by_id")
  deletedByName  String   @map("deleted_by_name")
  noteCreatedAt  DateTime @map("note_created_at")
  deletedAt      DateTime @default(now()) @map("deleted_at")

  @@map("deleted_notes")
}
